package desafio;

import java.io.IOException;

import java.io.FileNotFoundException;
import java.util.ArrayList;
import java.util.Scanner;


public class Registra {

	public static void main(String[] args) throws FileNotFoundException, IOException {
		String leitura = "";
		
		Scanner scan = new Scanner(System.in);
		
		ArrayList<Integer> list = new ArrayList<>();
		
		System.out.print("Quantos números vão ser digitados? ");
		int quantidadeDeNumeros = scan.nextInt();
		
		for(int i=1; i<=quantidadeDeNumeros; i++) {
			
			System.out.print("Digite o " + (i) + "° número: ");
			leitura = scan.next();
			
			list.add(Integer.parseInt(leitura));
		}
		
		
		Escritor[] escritores = {new SaidaTxt("Saída", quantidadeDeNumeros),  new SaidaExcel("Saída", quantidadeDeNumeros)};
		

		while (escritores[0].getContador() < quantidadeDeNumeros) {
			boolean invalido = false;
			
			if (scan.hasNextInt()) {
				int valor = scan.nextInt();
				
				if (valor >= 0 && valor <= 10) {
					for (Escritor escritor : escritores) {
						escritor.escreverSaida(valor);
					}
				} else {
					invalido = true;
				}
			} else {
				scan.nextLine();
				invalido = true;
			}
			
			if (invalido) System.out.println("Valor invalido, tente um numero inteiro de 0 a 10");
		}
		
		System.out.println("Números digitados: " + list);
		

	}

}
