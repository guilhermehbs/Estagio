	protected static double calculaMedia(int[] numeros) {
		double soma = 0;
		for (int numero : numeros) {
			soma += numero;
		}
		return soma/numeros.length;
	}
	public static void main(String[] args) {
		int[] numeros = {10, 10, 10};
		
		System.out.println(calculaMedia(numeros));
	}
	
